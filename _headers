# Cloudflare Pages Headers Configuration
# This file configures cache headers for optimal performance

# HTML files - no cache (always fetch fresh for SPA)
/*.html
  Cache-Control: public, max-age=0, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN

# JavaScript files - cache for 1 year (with content hash in filename)
/js/*
  Cache-Control: public, max-age=31536000, immutable

# CSS files - cache for 1 year (with content hash in filename)
/css/*
  Cache-Control: public, max-age=31536000, immutable

# Images - cache for 1 month
/images/*
  Cache-Control: public, max-age=2592000

# Fonts - cache for 1 year
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Static assets with hash in filename - cache forever
/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

# Media files - cache for 1 month
/*.jpg
  Cache-Control: public, max-age=2592000

/*.jpeg
  Cache-Control: public, max-age=2592000

/*.png
  Cache-Control: public, max-age=2592000

/*.gif
  Cache-Control: public, max-age=2592000

/*.svg
  Cache-Control: public, max-age=2592000

/*.webp
  Cache-Control: public, max-age=2592000

/*.ico
  Cache-Control: public, max-age=2592000

# Font files - cache for 1 year
/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.ttf
  Cache-Control: public, max-age=31536000, immutable

/*.eot
  Cache-Control: public, max-age=31536000, immutable

# Manifest and service worker - no cache (must be fresh)
/manifest.json
  Cache-Control: public, max-age=0, must-revalidate

/service-worker.js
  Cache-Control: public, max-age=0, must-revalidate

/robots.txt
  Cache-Control: public, max-age=3600

/sitemap.xml
  Cache-Control: public, max-age=3600

# API endpoints - no cache
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  X-Content-Type-Options: nosniff

# WebSocket endpoints - no cache
/websocket/*
  Cache-Control: no-cache, no-store, must-revalidate

# Security headers for all pages
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  Referrer-Policy: strict-origin-when-cross-origin

